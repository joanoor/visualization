{
  "extends": "@nrzt/configs/base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": [
      "node",
      "element-plus/global",
      "@nrzt/configs/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@views/*": [
        "src/views/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "mock/**/*.ts",
    "mock/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "uno.config.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}